def print_pascal(n):
    """Prints Pascal's triangle up to n rows."""
    for i in range(n):
        # Print leading spaces for alignment
        print(" " * (n - i - 1), end="")

        # Calculate and print elements of the current row
        row = [1] * (i + 1)
        for j in range(1, i):
            row[j] = triangle[i - 1][j - 1] + triangle[i - 1][j]

        print(" ".join(map(str, row)))

        # Store the current row for the next iteration
        triangle.append(row)

# Get input from the user
try:
    num_rows = int(input("Enter the number of rows for Pascal's triangle: "))
    if num_rows <= 0:
        print("Please enter a positive integer.")
    else:
        triangle = []  # Initialize an empty list to store the triangle rows
        print_pascal(num_rows)
except ValueError:
    print("Invalid input. Please enter an integer.")
